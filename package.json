{
  "name": "base-converter",
  "version": "1.0.0",
  "description": "A package to convert numbers from one base to another",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Dkolomy <Dkolomy@hotmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "check-types": "tsc --noEmit",
    "clean": "rimraf build",
    "buildjs": "tsc",
    "build": "npm-run-all clean build:js",
    "test": "jest",
    "test:clear-cache": "jest --clearCache",
    "test:coverage": "jest --coverage",
    "coverage": "npm-run-all test:clear-cache test:coverage",
    "lint": "eslint 'src/**/*.ts' --fix",
    "docs:build": "typedoc",
    "docs:serve": "serve docs",
    "serve-docs": "npm-run-all docs:build docs:serve",
    "pre-commit": "npm-run-all check-types lint"
  },
  "keywords": [
    "converter",
    "math",
    "base",
    "numbers"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "serve": "^14.2.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.2"
  },
  "files": [
    "build/**/*"
  ]
}
